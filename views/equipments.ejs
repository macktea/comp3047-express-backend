<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Rent it!</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <style>
        .bread-container {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 10px;
            box-sizing: border-box;
        }
        

        .breadcrumb {
            list-style: none;
            display: flex;
            padding: 0;
            margin: 0;
        }

        .breadcrumb li {
            margin-right: 5px;
        }

        .breadcrumb li+li:before {
            margin-right: 5px;
            content: "/";
        }

        .breadcrumb a {
        color: #0275d8;
        text-decoration: none;
        }


    </style>


    </head>
  <body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid">
          <a class="navbar-brand" href="/">Equipment Rental</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
              <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="/">Home</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/equipments">Equipments</a>
              </li>
              
            </ul>
          </div>
        </div>
      </nav>
    <!-- Navbar -->
   
    <!-- breadcrumb -->
    <div class="bread-container">
        <ul class="breadcrumb">
            <li><a href="/">Home</a></li>
            <li>Equipments</li>
        </ul>
        <a href="/equipments/add" class="btn btn-primary">Add</a>
    </div>
    <!-- breadcrumb -->

    <!-- Equipments -->
     <% for (var i = 0; i < rent_equipments.length; i++) { %>
    <div class="card" style="width: 18rem;">
      <img src= %= rent_equipments[i].image-url class="card-img-top">
      <div class="card-body">
        <h5 class="card-title"><%= rent_equipments[i].name %></h5>
        <p class="card-text"><%= rent_equipments[i].description %></p>
        <a href="/equipment/edit/<%=rent_equipments[i]._id %>" class="btn btn-primary">Edit</a>
      </div>
    </div>

    <%= rent_equipments[i].name %>
    <% } %>
    <!-- Equipments -->

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>